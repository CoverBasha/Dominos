<UserControl x:Class="Dominos.MVVM.View.GameView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Dominos.MVVM.View"
             xmlns:vms="clr-namespace:Dominos.MVVM.ViewModel"
             xmlns:view="clr-namespace:Dominos.MVVM.View"
             mc:Ignorable="d" 
             d:DesignHeight="1080" d:DesignWidth="1920"
             Margin="0">
    <Grid ClipToBounds="False">
        <Grid x:Name="GameArea">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="60"/>
                <RowDefinition/>
                <RowDefinition Height="180"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="60"/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>

            <ItemsControl Grid.Row="0"
                          Grid.Column="1"
                          ItemsSource="{Binding OpponentHand}"
                          ClipToBounds="False"
                          Margin="0,-100,0,0">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <StackPanel Orientation="Horizontal"
                                    HorizontalAlignment="Center"
                                    ClipToBounds="False"/>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                <ItemsControl.ItemTemplate>
                    <DataTemplate DataType="{x:Type vms:PieceViewModel}">
                        <view:PieceView>
                            <view:PieceView.LayoutTransform>
                                <RotateTransform Angle="{Binding Angle}"/>
                            </view:PieceView.LayoutTransform>
                        </view:PieceView>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>

            <ItemsControl Grid.Row="1"
                          Grid.Column="1"
                          ItemsSource="{Binding Board}">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <Canvas Background="Transparent" ClipToBounds="False"/>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>

                <ItemsControl.ItemContainerStyle>
                    <Style>
                        <Setter Property="Canvas.Left" Value="{Binding X}"/>
                        <Setter Property="Canvas.Top" Value="{Binding Y}"/>
                    </Style>
                </ItemsControl.ItemContainerStyle>

                <ItemsControl.ItemTemplate>
                    <DataTemplate DataType="{x:Type vms:PieceViewModel}">
                        <view:PieceView>
                            <view:PieceView.LayoutTransform>
                                <RotateTransform Angle="{Binding Angle}"
                                                 CenterX="80"
                                                 CenterY="40"/>
                            </view:PieceView.LayoutTransform>
                        </view:PieceView>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>

            <ItemsControl Grid.Row="2"
                          Grid.Column="1"
                          ItemsSource="{Binding PlayerHand}"
                          ClipToBounds="False">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <StackPanel Orientation="Horizontal"
                                    HorizontalAlignment="Center"
                                    ClipToBounds="False"/>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                <ItemsControl.ItemTemplate>
                    <DataTemplate DataType="{x:Type vms:PieceViewModel}">
                        <view:PieceView>
                            <view:PieceView.LayoutTransform>
                                <RotateTransform Angle="{Binding Angle}"/>
                            </view:PieceView.LayoutTransform>
                        </view:PieceView>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>

            <StackPanel Grid.Column="0"
                        Grid.Row="1">

                <TextBlock Text="Score"
                           Foreground="White"
                           HorizontalAlignment="Center"
                           FontSize="20"/>

                <Border Background="#38190B"
                        CornerRadius="10"
                        BorderThickness="2"
                        BorderBrush="White"
                        Margin="0,20">
                    <TextBlock Name="OpponentScore"
                               Foreground="White"
                               HorizontalAlignment="Center"
                               FontSize="30"
                               Text="{Binding OpponentScore}"/>
                </Border>

                <Border Background="#38190B"
                        CornerRadius="10"
                        BorderThickness="2"
                        BorderBrush="White"
                        Margin="0,400">
                    <TextBlock Name="YourScore"
                               Foreground="White"
                               HorizontalAlignment="Center"
                               FontSize="30"
                               Text="{Binding PlayerScore}"/>
                </Border>
            </StackPanel>
        </Grid>

        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="150"/>
                <ColumnDefinition/>
                <ColumnDefinition Width="60" x:Name="SidePanel"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="65"/>
                <RowDefinition/>
                <RowDefinition Height="50"/>
            </Grid.RowDefinitions>

            <Button Command="{Binding ExitCommand}"
                    HorizontalAlignment="Center">
                <Button.Resources>
                    <Style TargetType="Button">
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="AntiqueWhite"
                                            CornerRadius="5"
                                            Width="140"
                                            Margin="0,0,0,10"
                                            BorderThickness="0"
                                            BorderBrush="Crimson"
                                            Name="Border">
                                        <Grid>
                                            <Grid Name="ButtonBackground"
                                                  Background="Crimson"
                                                  Opacity="0"/>
                                            <TextBlock Text="Leave"
                                                       FontSize="30"
                                                       HorizontalAlignment="Center"
                                                       VerticalAlignment="Center"
                                                       Foreground="Black"/>
                                        </Grid>
                                    </Border>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Cursor" Value="Hand"/>
                                            <Setter TargetName="Border" Property="BorderThickness" Value="2"/>
                                            <Setter TargetName="ButtonBackground" Property="Opacity" Value="0.2"/>
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </Button.Resources>
            </Button>

            <StackPanel Orientation="Vertical"
                        Grid.Row="1"
                        Grid.Column="2"
                        VerticalAlignment="Center"
                        HorizontalAlignment="Center">

                <Button Name="DrawButton"
                        Command="{Binding DrawPieceCommand}"
                        Grid.Column="2"
                        Grid.Row="1"
                        Cursor="Hand">
                    <Button.Resources>
                        <Style TargetType="Button">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Height="60"
                                                Width="60"
                                                CornerRadius="10"
                                                BorderThickness="2"
                                                Background="#38190B"
                                                BorderBrush="White">
                                            <StackPanel Orientation="Vertical">
                                                <TextBlock Foreground="White"
                                                           FontSize="20"
                                                           HorizontalAlignment="Center">
                                                    Draw
                                                </TextBlock>
                                                <TextBlock Foreground="White"
                                                           FontSize="20"
                                                           HorizontalAlignment="Center"
                                                           Name="CardsCount">
                                                    Cards
                                                </TextBlock>
                                            </StackPanel>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </Button.Resources>
                </Button>

                <TextBlock FontSize="20"
                           Foreground="White"
                           HorizontalAlignment="Center"
                           Margin="0,10"
                           Name="CardsCount"
                           Text="{Binding GraveyardCount}"/>
            </StackPanel>
        </Grid>

        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="61"/>
                <ColumnDefinition/>
                <ColumnDefinition Width="61"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition Height="200"/>
            </Grid.RowDefinitions>

            <Border Grid.Column="1"
                    Grid.Row="1"
                    Name="Blocker"
                    Visibility="Hidden"
                    Background="Black"
                    Opacity="0.3">
                <TextBlock Name="SkipText"
                           Foreground="White"
                           FontSize="50"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"
                           Visibility="Hidden"/>
            </Border>
        </Grid>

        <TextBlock Foreground="White"
                   FontSize="30"
                   HorizontalAlignment="Left"
                   VerticalAlignment="Center"
                   Name="DrawText"
                   Margin="80,500,0,0"/>
        </Grid>

        <Grid Name="EndScreen"
              Visibility="{Binding IsEndScreenVisible, Converter={StaticResource BoolToVisibilityConverter}}"
              Background="#80000000">
            <Border Background="#DDFFFFFF"
                    CornerRadius="20"
                    BorderBrush="#644200"
                    BorderThickness="5"
                    Padding="50"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center">
                <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                    <TextBlock Text="{Binding EndText}"
                               FontSize="48"
                               FontWeight="Bold"
                               Foreground="Black"
                               HorizontalAlignment="Center"
                               Margin="0 0 0 20"/>
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0 0 0 20">
                        <StackPanel Margin="20 0">
                            <TextBlock Text="You" FontSize="24" FontWeight="SemiBold" HorizontalAlignment="Center"/>
                            <TextBlock Text="{Binding PlayerScore}" FontSize="28" HorizontalAlignment="Center"/>
                        </StackPanel>
                        <StackPanel Margin="20 0">
                            <TextBlock Text="Opponent" FontSize="24" FontWeight="SemiBold" HorizontalAlignment="Center"/>
                            <TextBlock Text="{Binding OpponentScore}" FontSize="28" HorizontalAlignment="Center"/>
                        </StackPanel>
                    </StackPanel>
                    <Button Content="{Binding RoundButtonText}"
                            Command="{Binding NextRoundCommand}"
                            Padding="12"
                            Width="160"
                            Background="AntiqueWhite"
                            Foreground="Black"
                            FontWeight="SemiBold"
                            BorderThickness="3"
                            BorderBrush="#644200"
                            Cursor="Hand"/>
                </StackPanel>
            </Border>
        </Grid>
    </Grid>
</UserControl>
